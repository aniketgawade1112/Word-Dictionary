<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.word_dictionary.DictionaryPageController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <ImageView fitHeight="80.0" fitWidth="400.0" layoutX="40">
            <image>
                <Image url = "@dictionary.jpg"/>
            </image>
        </ImageView>

        <Text layoutX = "100.0" layoutY="100.0" text="Search a Word">
                <font>
                        <Font size="20.0"/>
                </font>
        </Text>
        <TextField fx:id="search" layoutY="120" layoutX="100" minHeight="20" minWidth="100" promptText = "Search"></TextField>
        <Button layoutX="300" layoutY="110"  text="Search" onMouseClicked="#searchButton"></Button>

        <Text layoutX = "100.0" layoutY="170.0"> Add a New Word</Text>
        <TextField fx:id="newword" layoutY="200" layoutX="100" minHeight="20" minWidth="100" promptText = "Add a New Word"></TextField>
        <TextField fx:id="meaning" layoutY="250" layoutX="100" minHeight="20" minWidth="100" promptText = "Meaning"></TextField>
        <Button layoutX="300" layoutY="225"  text="Add" onMouseClicked = "#Add"></Button>

        <Text layoutX = "100.0" layoutY="290.0"> Find Meaning</Text>
        <TextField fx:id="findword" layoutY="320" layoutX="100" minHeight="20" minWidth="100" promptText = "Find Meaning"></TextField>
        <Button layoutX="300" layoutY="300"  text="Find Meaning" onMouseClicked = "#Meaning"></Button>
    </children>

</AnchorPane>
